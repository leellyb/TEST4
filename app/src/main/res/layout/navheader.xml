    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/auto" />
    <TextView
